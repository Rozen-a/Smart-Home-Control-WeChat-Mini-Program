/* pages/timer/timer.wxss */
.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.header-card {
  background: linear-gradient(to right, #4bb0ff, #6149f6);
  color: #fff;
  padding: 40rpx 30rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.card-subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

.form-card {
  padding: 0;
}

.btn-container {
  padding: 30rpx;
}

.device-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.popup-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.countdown-input {
  display: flex;
  align-items: center;
}

.unit {
  margin-left: 10rpx;
  color: #666;
}

.timers-card {
  padding: 30rpx 0;
}

.timers-card .card-title {
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.timer-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.timer-info {
  font-size: 26rpx;
  color: #666;
  display: flex;
  flex-direction: column;
}

.timer-status {
  font-size: 24rpx;
  color: #999;
}

.timer-status.active {
  color: #07c160;
}

.countdown-remaining {
  color: #ff6b00;
  margin-top: 6rpx;
}

.delete-btn {
  height: 100%;
  width: 65px;
  background-color: #ff4444;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}